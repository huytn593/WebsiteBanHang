@model WebsiteBanHang.Models.Product

@{
    ViewData["Title"] = "Xác nhận xóa sản phẩm";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

<div class="container mt-5">
    <div class="alert alert-danger shadow-sm p-4 rounded">
        <h2 class="text-danger">⚠️ Bạn có chắc chắn muốn xóa sản phẩm này?</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid img-thumbnail" alt="Ảnh sản phẩm" />
                }
                else
                {
                    <img src="https://via.placeholder.com/300x200?text=No+Image" class="img-fluid img-thumbnail" />
                }
            </div>
            <div class="col-md-8">
                <h4><strong>Tên:</strong> @Model.Name</h4>
                <p><strong>Giá:</strong> @Model.Price.ToString("N0") đ</p>
                <p><strong>Mô tả:</strong> @Model.Description</p>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-4" onsubmit="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">🗑️ Xóa</button>
            <a asp-action="Index" class="btn btn-secondary">↩️ Hủy</a>
        </form>
    </div>
</div>
